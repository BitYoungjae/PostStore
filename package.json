    "chokidar": "^3.4.0",
    "date-fns": "^2.14.0",
    "gray-matter": "^4.0.2",
    "ora": "^4.0.4",
    "prismjs": "^1.20.0",
    "rehype": "^11.0.0",
    "rehype-parse": "^7.0.1",
    "rehype-sanitize": "^3.0.1",
    "rehype-slug": "^3.0.0",
    "rehype-stringify": "^8.0.0",
